[buildout]
extensions = mr.developer buildout-versions
timeout = 3
find-links =
    http://dist.plone.org/release/${plone_version}
    http://pypi.python.org/simple/ZODB4
allow-hosts =
     *localhost*
     *willowrise.org*
     *plone.org*
     *zope.org*
     *xmlsoft.org*
     *effbot.org*
     *python.org*
     *initd.org*
     *googlecode.com*
     *plope.com*
     *bitbucket.org*
     *repoze.org*
     *crummy.com*
     *bpython-interpreter.org*
     *stompstompstomp.com*
     *ftp.tummy.com*
     *pybrary.net*
     *www.tummy.com*
     *www.riverbankcomputing.com*
     *.selenic.com*
buildout_versions_file = \${buildout:directory}/etc/project/kgs.cfg
extends =
#if $major > 3:
    http://dist.plone.org/release/${plone_version}/versions.cfg
#end if
    project/plone.cfg
    project/versions.cfg
    sys/system.cfg
#if $with_ploneproduct_etherpad
    project/etherpad.cfg
#end if
#if $with_haproxy
    sys/ha.cfg
#end if
#if $with_supervisor
    sys/supervisor.cfg
#end if
#if $with_cache_support
    sys/cache.cfg
#end if
    sys/settings.cfg
    sys/settings-local.cfg
parts =
    \${v:project-parts}
    \${v:sys-parts}
#if $with_haproxy
    \${v:ha-parts}
#end if
#if $with_supervisor
    \${v:supervisor-parts}
#end if
#if $with_cache_support
    \${v:cache-parts}
#end if
#if $with_ploneproduct_etherpad
    \${v:etherpad-parts}
#end if
    \${v:filesystem-parts}

#if $with_supervisor
[supervisor]
programs = \${v:project-programs}
    \${v:sys-programs}
#if $with_haproxy
    \${v:ha-programs}
#end if
#if $with_cache_support
    \${v:cache-programs}
#end if
#if $with_ploneproduct_etherpad
    \${v:etherpad-programs}
#end if
#end if

